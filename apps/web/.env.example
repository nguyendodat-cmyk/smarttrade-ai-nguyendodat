# ============================================
# SmartTrade AI - Environment Variables
# Copy this file to .env.local and fill in values
# ============================================

# ─────────────────────────────────────────────
# SUPABASE CONFIGURATION
# Get these from: https://supabase.com/dashboard
# ─────────────────────────────────────────────
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ─────────────────────────────────────────────
# AI SERVICE CONFIGURATION
# Backend AI service URL
# ─────────────────────────────────────────────
VITE_AI_SERVICE_URL=http://localhost:8000

# ─────────────────────────────────────────────
# API CONFIGURATION
# Main backend API URL
# ─────────────────────────────────────────────
VITE_API_URL=http://localhost:3000

# ─────────────────────────────────────────────
# DEMO MODE
# Set to 'true' to bypass authentication
# Use for development and testing only
# ─────────────────────────────────────────────
VITE_DEMO_MODE=true

# ─────────────────────────────────────────────
# LOGGING
# Log levels: debug, info, warn, error
# ─────────────────────────────────────────────
VITE_LOG_LEVEL=info
VITE_DEBUG=false
# VITE_LOG_ENDPOINT=https://your-logging-service.com/logs

# ─────────────────────────────────────────────
# ANALYTICS (Optional)
# ─────────────────────────────────────────────
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# VITE_MIXPANEL_TOKEN=your-mixpanel-token

# ─────────────────────────────────────────────
# EXTERNAL SERVICES (Optional)
# ─────────────────────────────────────────────
# VITE_SENTRY_DSN=https://your-sentry-dsn
# VITE_INTERCOM_APP_ID=your-intercom-id

# ─────────────────────────────────────────────
# FEATURE FLAGS OVERRIDE (Optional)
# Override specific feature flags
# ─────────────────────────────────────────────
# VITE_FF_SMART_ALERTS=true
# VITE_FF_REAL_TIME_QUOTES=true
# VITE_FF_SOCIAL_TRADING=false

# ─────────────────────────────────────────────
# MARKET DATA PROVIDERS (Production)
# ─────────────────────────────────────────────
# VITE_SSI_API_KEY=your-ssi-api-key
# VITE_VNDIRECT_API_KEY=your-vndirect-key

# ─────────────────────────────────────────────
# PUSH NOTIFICATIONS (Optional)
# ─────────────────────────────────────────────
# VITE_FIREBASE_CONFIG={"apiKey":"...","authDomain":"..."}
# VITE_ONESIGNAL_APP_ID=your-onesignal-id

# ─────────────────────────────────────────────
# PAYMENT GATEWAY (Production)
# ─────────────────────────────────────────────
# VITE_STRIPE_PUBLISHABLE_KEY=pk_live_xxxx
# VITE_VNPAY_TMN_CODE=your-vnpay-code

# ─────────────────────────────────────────────
# PRODUCTION SETTINGS
# Render deployment specific
# ─────────────────────────────────────────────
VITE_APP_NAME=SmartTrade AI
VITE_APP_URL=https://smarttrade-web.onrender.com
# VITE_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ═══════════════════════════════════════════════════════════
# PRODUCTION CHECKLIST:
# ═══════════════════════════════════════════════════════════
# 1. Set VITE_DEMO_MODE=false
# 2. Set VITE_LOG_LEVEL=warn
# 3. Configure real Supabase URL and anon key
# 4. Set VITE_AI_SERVICE_URL to production API
# 5. Enable Sentry for error tracking
# ═══════════════════════════════════════════════════════════
