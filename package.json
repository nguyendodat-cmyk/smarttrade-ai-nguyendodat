{
  "name": "smarttrade-ai",
  "version": "1.0.0",
  "private": true,
  "description": "SmartTrade AI - Web Trading Platform with AI-powered insights",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:ai": "cd apps/ai-service && python -m uvicorn app.main:app --reload --port 8000",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "db:seed": "cd scripts && npx tsx seed-database.ts",
    "db:generate-mock": "cd scripts && npx tsx generate-mock-data.ts"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.11.1"
}
